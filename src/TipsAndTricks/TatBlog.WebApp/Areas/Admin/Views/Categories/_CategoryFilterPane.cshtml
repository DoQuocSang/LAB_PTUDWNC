@model TatBlog.WebApp.Areas.Admin.Models.CategoryFilterModel

<form asp-area="Admin"
      asp-controller="Categories"
      asp-action="Index"
      method="get"
      class="row gy-2 gx-3 align-items-center">
    <div class="col-auto">
        <label class="visually-hidden" asp-for="Keyword"></label>
        <input type="text"
                class="form-control"
                asp-for="Keyword"
                placeholder="Nhập từ khóa..."/>
    </div>

    <div class="col-auto">
        <input type="checkbox" 
                class="form-check-input"
                asp-for="ShowOnMenu" />
        <label class="form-check-label" asp-for="ShowOnMenu">Hiển thị trên Menu</label>
    </div>

    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Tìm/lọc</button>
        
        <a class="btn btn-danger"
           asp-area="Admin"
           asp-controller="Categories"
           asp-action="Index">
            Bỏ lọc
        </a>

        <a class="btn btn-success"
           asp-area="Admin"
           asp-controller="Categories"
           asp-action="Edit">
            Thêm mới
        </a>
    </div>
</form>