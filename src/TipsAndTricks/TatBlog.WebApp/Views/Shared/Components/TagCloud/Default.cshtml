@model IList<TagItem>

<div class="mb-4">
    <h4 class="text-success mb-2">
        Các thẻ
    </h4>

    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Blog"
                    asp-action="Tag"
                    asp-route-slug="@item.UrlSlug"
                    title="@item.Description"
                    class="no-underline">
                    @item.Name
                    <span>
                        (@item.PostCount)
                    </span>
                </a>
            </li>
        }
    </ul>
</div>
