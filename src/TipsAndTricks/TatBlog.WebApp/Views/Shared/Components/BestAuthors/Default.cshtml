@model IList<Author>

<div class="mb-4">
    <h4 class="text-success mb-2">
        TOP 4 tác giả có nhiều bài viết nhất
    </h4>

    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Blog"
                    asp-action="Author"
                    asp-route-slug="@item.UrlSlug"
                    title="@item.FullName"
                    class="no-underline">
                    @item.FullName
                    <span>
                        (@item.Posts.Count)
                    </span>
                </a>
            </li>
        }
    </ul>
</div>
